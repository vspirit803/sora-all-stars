{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true, // 用于帮助 TypeScript 快速确定引用工程的输出文件位置
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
