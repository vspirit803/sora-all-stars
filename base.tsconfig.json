{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "ESNext",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "isolatedModules": true
  }
}
